@model BankPortalMVC.Models.customerid

@{
    ViewData["Title"] = "GetCustomerAccountDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet"href="~/css/GetCustomerAccountDetails.css"/>
</head>
<h1>Customer Account Details</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetCustomerAccountDetails" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="id" class="control-label">Enter the Customer ID</label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="btn" value="Get Account Details" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

